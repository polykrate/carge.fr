{
  "type": "object",
  "required": ["import2"],
  "properties": {
    "import2": {
      "type": "object",
      "required": [
        "importerName",
        "transferDate",
        "fromEntity",
        "destinationCountry",
        "batchNumber",
        "bottleNumberRange",
        "bottlesInLot",
        "volumeTotal",
        "storageConditions",
        "qualityCheck",
        "transportMethod",
        "importLicense"
      ],
      "properties": {
        "importerName": {
          "type": "string",
          "minLength": 1,
          "maxLength": 200,
          "description": "Name of the final importing company (FIRST FIELD)"
        },
        "transferDate": {
          "type": "string",
          "format": "date",
          "description": "Date of transfer (YYYY-MM-DD)"
        },
        "fromEntity": {
          "type": "string",
          "minLength": 1,
          "maxLength": 200,
          "description": "Name of the sending entity"
        },
        "destinationCountry": {
          "type": "string",
          "minLength": 2,
          "maxLength": 100,
          "description": "Final destination country"
        },
        "batchNumber": {
          "type": "string",
          "pattern": "^[A-Z0-9-]+$",
          "minLength": 1,
          "maxLength": 50,
          "description": "Batch number being transferred"
        },
        "bottleNumberRange": {
          "type": "string",
          "pattern": "^[0-9]+-[0-9]+$",
          "description": "Range of bottle numbers in this transfer"
        },
        "bottlesInLot": {
          "type": "integer",
          "minimum": 1,
          "maximum": 1000000,
          "description": "Number of bottles in this lot"
        },
        "volumeTotal": {
          "type": "number",
          "minimum": 0.1,
          "maximum": 1000000,
          "description": "Total volume in liters"
        },
        "storageConditions": {
          "type": "string",
          "minLength": 1,
          "maxLength": 300,
          "description": "Storage conditions at bonded warehouse"
        },
        "qualityCheck": {
          "type": "string",
          "enum": ["conforme", "non-conforme", "pending"],
          "description": "Quality verification status"
        },
        "qrBlockchainVerified": {
          "type": "boolean",
          "description": "QR code blockchain verification completed"
        },
        "transportMethod": {
          "type": "string",
          "minLength": 1,
          "maxLength": 200,
          "description": "Method of transportation used"
        },
        "importLicense": {
          "type": "string",
          "maxLength": 100,
          "description": "Import license number"
        },
        "importLicenseCid": {
          "type": "string",
          "pattern": "^baf[a-z0-9]+$",
          "description": "IPFS CID of import license document (AUDIT)"
        },
        "gaccCertificate": {
          "type": "string",
          "maxLength": 100,
          "description": "GACC certificate number (China)"
        },
        "gaccCertificateCid": {
          "type": "string",
          "pattern": "^baf[a-z0-9]+$",
          "description": "IPFS CID of GACC certificate (AUDIT)"
        },
        "healthCertificate": {
          "type": "string",
          "maxLength": 100,
          "description": "Health certificate number"
        },
        "healthCertificateCid": {
          "type": "string",
          "pattern": "^baf[a-z0-9]+$",
          "description": "IPFS CID of health certificate (AUDIT)"
        },
        "bilingualLabeling": {
          "type": "boolean",
          "description": "Bilingual labeling applied"
        },
        "labelingLanguages": {
          "type": "array",
          "items": {
            "type": "string",
            "maxLength": 10
          },
          "maxItems": 5,
          "description": "List of languages on labels"
        },
        "transferNotes": {
          "type": "string",
          "maxLength": 500,
          "description": "Additional notes about the transfer"
        }
      }
    }
  }
}

