{
  "type": "object",
  "required": ["retail"],
  "properties": {
    "retail": {
      "type": "object",
      "required": [
        "retailerName",
        "transferDate",
        "fromEntity",
        "batchNumber",
        "bottleNumber",
        "volumeUnit",
        "storageConditions",
        "qualityCheck",
        "transportMethod",
        "retailPrice",
        "retailCurrency"
      ],
      "properties": {
        "retailerName": {
          "type": "string",
          "minLength": 1,
          "maxLength": 200,
          "description": "Name of the retail store or cellar (FIRST FIELD)"
        },
        "transferDate": {
          "type": "string",
          "format": "date",
          "description": "Date of transfer (YYYY-MM-DD)"
        },
        "fromEntity": {
          "type": "string",
          "minLength": 1,
          "maxLength": 200,
          "description": "Name of the sending entity"
        },
        "batchNumber": {
          "type": "string",
          "pattern": "^[A-Z0-9-]+$",
          "minLength": 1,
          "maxLength": 50,
          "description": "Batch number"
        },
        "bottleNumber": {
          "type": "string",
          "minLength": 1,
          "maxLength": 50,
          "description": "Individual bottle number"
        },
        "volumeUnit": {
          "type": "number",
          "enum": [0.5, 0.7, 0.75, 1, 1.5, 1.75],
          "description": "Volume of individual bottle in liters"
        },
        "storageConditions": {
          "type": "string",
          "minLength": 1,
          "maxLength": 300,
          "description": "Storage conditions at retail location"
        },
        "qualityCheck": {
          "type": "string",
          "enum": ["conforme", "non-conforme", "pending"],
          "description": "Quality verification status"
        },
        "blockchainVerified": {
          "type": "boolean",
          "description": "Blockchain verification completed"
        },
        "provenanceVerified": {
          "type": "string",
          "maxLength": 200,
          "description": "Provenance verification details"
        },
        "transportMethod": {
          "type": "string",
          "minLength": 1,
          "maxLength": 200,
          "description": "Method of transportation used"
        },
        "retailPrice": {
          "type": "number",
          "minimum": 0.01,
          "maximum": 10000000,
          "description": "Retail price"
        },
        "retailCurrency": {
          "type": "string",
          "enum": ["EUR", "USD", "GBP", "CNY", "HKD", "JPY"],
          "description": "Currency of retail price"
        },
        "retailPriceEUR": {
          "type": "number",
          "minimum": 0.01,
          "description": "Retail price converted to EUR (optional)"
        },
        "vipServicesIncluded": {
          "type": "boolean",
          "description": "VIP services included"
        },
        "transferNotes": {
          "type": "string",
          "maxLength": 500,
          "description": "Additional notes about the transfer"
        }
      }
    }
  }
}

