{
  "type": "object",
  "required": ["import1"],
  "properties": {
    "import1": {
      "type": "object",
      "required": [
        "importerName",
        "transferDate",
        "fromEntity",
        "originCountry",
        "destinationCountry",
        "batchNumber",
        "bottleNumberRange",
        "bottlesInLot",
        "volumeTotal",
        "storageConditions",
        "qualityCheck",
        "transportMethod",
        "importLicense"
      ],
      "properties": {
        "importerName": {
          "type": "string",
          "minLength": 1,
          "maxLength": 200,
          "description": "Name of the importing company (FIRST FIELD)"
        },
        "transferDate": {
          "type": "string",
          "format": "date",
          "description": "Date of transfer (YYYY-MM-DD)"
        },
        "fromEntity": {
          "type": "string",
          "minLength": 1,
          "maxLength": 200,
          "description": "Name of the sending entity"
        },
        "originCountry": {
          "type": "string",
          "minLength": 2,
          "maxLength": 100,
          "description": "Origin country"
        },
        "destinationCountry": {
          "type": "string",
          "minLength": 2,
          "maxLength": 100,
          "description": "Destination country"
        },
        "batchNumber": {
          "type": "string",
          "pattern": "^[A-Z0-9-]+$",
          "minLength": 1,
          "maxLength": 50,
          "description": "Batch number being transferred"
        },
        "bottleNumberRange": {
          "type": "string",
          "pattern": "^[0-9]+-[0-9]+$",
          "description": "Range of bottle numbers in this transfer"
        },
        "bottlesInLot": {
          "type": "integer",
          "minimum": 1,
          "maximum": 1000000,
          "description": "Number of bottles in this lot"
        },
        "volumeTotal": {
          "type": "number",
          "minimum": 0.1,
          "maximum": 1000000,
          "description": "Total volume in liters"
        },
        "storageConditions": {
          "type": "string",
          "minLength": 1,
          "maxLength": 300,
          "description": "Storage conditions at destination"
        },
        "qualityCheck": {
          "type": "string",
          "enum": ["conforme", "non-conforme", "pending"],
          "description": "Quality verification status"
        },
        "authenticityVerified": {
          "type": "boolean",
          "description": "Authenticity verified"
        },
        "transportMethod": {
          "type": "string",
          "minLength": 1,
          "maxLength": 200,
          "description": "Method of transportation used"
        },
        "importLicense": {
          "type": "string",
          "maxLength": 100,
          "description": "Import license number"
        },
        "importLicenseCid": {
          "type": "string",
          "pattern": "^baf[a-z0-9]+$",
          "description": "IPFS CID of import license"
        },
        "originCertificate": {
          "type": "string",
          "maxLength": 100,
          "description": "Origin certificate number"
        },
        "originCertificateCid": {
          "type": "string",
          "pattern": "^baf[a-z0-9]+$",
          "description": "IPFS CID of origin certificate"
        },
        "transferNotes": {
          "type": "string",
          "maxLength": 500,
          "description": "Additional notes about the transfer"
        }
      }
    }
  }
}

